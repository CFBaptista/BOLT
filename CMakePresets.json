{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 3
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "llvm",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_LINKER": "lld"
            },
            "environment": {
                "LDFLAGS": "-fuse-ld=lld"
            }
        },
        {
            "name": "gnu",
            "hidden": true,
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_LINKER": "ld"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "relWithDebInfo",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "ubuntu-x86-64-debug-ninja-clang",
            "displayName": "Ubuntu x86-64 Debug (Ninja + Clang)",
            "hidden": false,
            "inherits": ["llvm", "debug"]
        },
        {
            "name": "ubuntu-x86-64-release-ninja-clang",
            "displayName": "Ubuntu x86-64 Release (Ninja + Clang)",
            "hidden": false,
            "inherits": ["llvm", "release"]
        },
        {
            "name": "ubuntu-x86-64-relWithDebInfo-ninja-clang",
            "displayName": "Ubuntu x86-64 RelWithDebInfo (Ninja + Clang)",
            "hidden": false,
            "inherits": ["llvm", "relWithDebInfo"]
        },
        {
            "name": "ubuntu-x86-64-debug-make-gcc",
            "displayName": "Ubuntu x86-64 Debug (Make + GCC)",
            "hidden": false,
            "inherits": ["gnu", "debug"]
        },
        {
            "name": "ubuntu-x86-64-release-make-gcc",
            "displayName": "Ubuntu x86-64 Release (Make + GCC)",
            "hidden": false,
            "inherits": ["gnu", "release"]
        },
        {
            "name": "ubuntu-x86-64-relWithDebInfo-make-gcc",
            "displayName": "Ubuntu x86-64 RelWithDebInfo (Make + GCC)",
            "hidden": false,
            "inherits": ["gnu", "relWithDebInfo"]
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "hidden": true,
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "jobs": 4
        },
        {
            "name": "ubuntu-x86-64-debug-ninja-clang",
            "displayName": "Ubuntu x86-64 Debug (Ninja + Clang)",
            "hidden": false,
            "inherits": "base",
            "configuration": "Debug",
            "configurePreset": "ubuntu-x86-64-debug-ninja-clang"
        },
        {
            "name": "ubuntu-x86-64-release-ninja-clang",
            "displayName": "Ubuntu x86-64 Release (Ninja + Clang)",
            "hidden": false,
            "inherits": "base",
            "configuration": "Release",
            "configurePreset": "ubuntu-x86-64-release-ninja-clang"
        },
        {
            "name": "ubuntu-x86-64-relWithDebInfo-ninja-clang",
            "displayName": "Ubuntu x86-64 RelWithDebInfo (Ninja + Clang)",
            "hidden": false,
            "inherits": "base",
            "configuration": "RelWithDebInfo",
            "configurePreset": "ubuntu-x86-64-relWithDebInfo-ninja-clang"
        },
        {
            "name": "ubuntu-x86-64-debug-make-gcc",
            "displayName": "Ubuntu x86-64 Debug (Make + GCC)",
            "hidden": false,
            "inherits": "base",
            "configuration": "Debug",
            "configurePreset": "ubuntu-x86-64-debug-make-gcc"
        },
        {
            "name": "ubuntu-x86-64-release-make-gcc",
            "displayName": "Ubuntu x86-64 Release (Make + GCC)",
            "hidden": false,
            "inherits": "base",
            "configuration": "Release",
            "configurePreset": "ubuntu-x86-64-release-make-gcc"
        },
        {
            "name": "ubuntu-x86-64-relWithDebInfo-make-gcc",
            "displayName": "Ubuntu x86-64 RelWithDebInfo (Make + GCC)",
            "hidden": false,
            "inherits": "base",
            "configuration": "RelWithDebInfo",
            "configurePreset": "ubuntu-x86-64-relWithDebInfo-make-gcc"
        }
    ],
    "testPresets": [
        {
            "name": "base",
            "hidden": true,
            "inheritConfigureEnvironment": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "ubuntu-x86-64-debug-ninja-clang",
            "displayName": "Ubuntu x86-64 Debug (Ninja + Clang)",
            "hidden": false,
            "inherits": "base",
            "configuration": "Debug",
            "configurePreset": "ubuntu-x86-64-debug-ninja-clang"
        },
        {
            "name": "ubuntu-x86-64-release-ninja-clang",
            "displayName": "Ubuntu x86-64 Release (Ninja + Clang)",
            "hidden": false,
            "inherits": "base",
            "configuration": "Release",
            "configurePreset": "ubuntu-x86-64-release-ninja-clang"
        },
        {
            "name": "ubuntu-x86-64-relWithDebInfo-ninja-clang",
            "displayName": "Ubuntu x86-64 RelWithDebInfo (Ninja + Clang)",
            "hidden": false,
            "inherits": "base",
            "configuration": "RelWithDebInfo",
            "configurePreset": "ubuntu-x86-64-relWithDebInfo-ninja-clang"
        },
        {
            "name": "ubuntu-x86-64-debug-make-gcc",
            "displayName": "Ubuntu x86-64 Debug (Make + GCC)",
            "hidden": false,
            "inherits": "base",
            "configuration": "Debug",
            "configurePreset": "ubuntu-x86-64-debug-make-gcc"
        },
        {
            "name": "ubuntu-x86-64-release-make-gcc",
            "displayName": "Ubuntu x86-64 Release (Make + GCC)",
            "hidden": false,
            "inherits": "base",
            "configuration": "Release",
            "configurePreset": "ubuntu-x86-64-release-make-gcc"
        },
        {
            "name": "ubuntu-x86-64-relWithDebInfo-make-gcc",
            "displayName": "Ubuntu x86-64 RelWithDebInfo (Make + GCC)",
            "hidden": false,
            "inherits": "base",
            "configuration": "RelWithDebInfo",
            "configurePreset": "ubuntu-x86-64-relWithDebInfo-make-gcc"
        }
    ]
}